{
  "appId": "com.sales.tracker",
  "appName": "Sales Tracker",
  "webDir": "dist",
  "android": {
    "allowMixedContent": true,
    "overScrollMode": "never",
    "webContentsDebuggingEnabled": true
  },
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "errorPath": "/index.html"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 1000,
      "launchAutoHide": true,
      "backgroundColor": "#7c3aed",
      "showSpinner": false
    }
  }
}
